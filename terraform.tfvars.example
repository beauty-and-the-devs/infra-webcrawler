# =============================================================================
# Terraform Variables Example
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Required: GCP Project
# -----------------------------------------------------------------------------

project_id = "your-gcp-project-id"

# -----------------------------------------------------------------------------
# Required: GitHub Repository (for CI/CD)
# -----------------------------------------------------------------------------

# Format: "owner/repo-name" (e.g., "mycompany/mcp-webcrawler")
# This enables Workload Identity Federation for GitHub Actions
github_repo = "your-username/mcp-webcrawler"

# -----------------------------------------------------------------------------
# Optional: Project Naming
# -----------------------------------------------------------------------------

project_name = "webcrawler-mcp"
environment  = "prod" # dev, staging, prod

# -----------------------------------------------------------------------------
# Optional: Region Configuration (US regions for TikTok Shop)
# -----------------------------------------------------------------------------

region = "us-central1"
zone   = "us-central1-a"

# Other US region options:
# - us-east1 (South Carolina)
# - us-east4 (Northern Virginia)
# - us-west1 (Oregon)
# - us-west2 (Los Angeles)

# -----------------------------------------------------------------------------
# Optional: Network Configuration
# -----------------------------------------------------------------------------

network_cidr = "10.0.0.0/24"

# SSH access - Add your IP for direct SSH access (optional, IAP always works)
# Find your IP: curl ifconfig.me
allowed_ssh_cidrs = [
  # "YOUR_IP/32",
]

# HTTP API access
enable_http_api = true

allowed_http_cidrs = [
  "0.0.0.0/0", # Allow from anywhere (use with caution)
]

# -----------------------------------------------------------------------------
# Optional: Compute Configuration
# -----------------------------------------------------------------------------

# Machine types:
# - e2-small      : 2 vCPU, 2 GB RAM  (minimal, may be slow)
# - e2-medium     : 2 vCPU, 4 GB RAM  (minimum recommended)
# - e2-standard-2 : 2 vCPU, 8 GB RAM  (recommended)
# - e2-standard-4 : 4 vCPU, 16 GB RAM (high load)

machine_type   = "e2-standard-2"
boot_disk_size = 30
boot_disk_type = "pd-balanced" # pd-standard, pd-balanced, pd-ssd

# Use preemptible for ~60-90% cost savings (may be terminated anytime)
preemptible = false

# -----------------------------------------------------------------------------
# Optional: Application Configuration
# -----------------------------------------------------------------------------

# Docker image tag (default: latest)
# GitHub Actions will push with commit SHA and 'latest' tags
docker_image_tag = "latest"

# Application settings
log_level         = "info"
browser_pool_size = 2
rate_limit_rpm    = 30

# -----------------------------------------------------------------------------
# Proxy Configuration (Required for TikTok anti-bot bypass)
# -----------------------------------------------------------------------------
# Recommended: Bright Data Residential Proxy
# Sign up at: https://brightdata.com/

# proxy_server   = "http://brd.superproxy.io:22225"
